<div class="container is-max-desktop">
    <div class="columns">
        <div class="column">
            <h1 class="title is-1">{{title}}</h1>
        </div>
    </div>
    <div class="columns">
        <div class="tabs is-centered">
            <ul>
                <li class="{{loginPage}}"><a href="/login"><span>Login</span></a></li>
                <li class="{{signupPage}}"><a href="/signup"><span>Signup</span></a></li>
            </ul>
        </div>
    </div>
    <div class="columns box">
        <div class="column">
            <form action="{{page}}" method="post">
                {{#if signupPage}}
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control has-icons-left has-icons-right">
                        <input name="name" class="input {{errorType}}" type="text" placeholder="John Doe">
                        <span class="icon is-small is-left">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                </div>
                {{/if}}
                <div class="field">
                    <label class="label">Username</label>
                    <div class="control has-icons-left has-icons-right">
                        <input name="email" class="input {{errorType}}" type="email" placeholder="example@example.com">
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Password</label>
                    <div class="control has-icons-left has-icons-right">
                        <input name="password" class="input {{errorType}}" type="password" placeholder="Password">
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                    {{#if error}}
                    <p class="help {{errorType}}">{{error}}</p>
                    {{/if}}
                </div>
                <div class="field">
                    <p class="control">
                        <button class="button is-success">{{title}}</button>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>